{
	"name": "swc-plugins",
	"scripts": {
		"prepare": "husky install"
	},
	"lint-staged": {
		"!(**/tests/**/*)*.js": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.jsx": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.ts": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.tsx": [
			"prettier --write"
		],
		"*.rs": [
			"cargo fmt --"
		],
		"*.toml": [
			"taplo format"
		]
	},
	"devDependencies": {
		"@changesets/cli": "2.27.10",
		"@taplo/cli": "0.7.0",
		"lint-staged": "15.2.10"
	}
}
